# Depends on: gtk

name=gtk-chtheme
version=0.3.1
release=1
source=(http://plasmasturm.org/programs/gtk-chtheme/$name-$version.tar.bz2)

build() {
	cd $name-$version
	make
	mkdir -p $PKG/usr/bin
	install -m755 gtk-chtheme $PKG/usr/bin
}
