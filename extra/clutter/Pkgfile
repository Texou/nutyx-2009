# Depends on: gtk, mesa3d

name=clutter
version=1.2.4
release=1

source=(http://www.clutter-project.org/sources/clutter/1.2/$name-$version.tar.bz2)


build() {
	cd $name-$version
	./configure --prefix=/usr 
	make
	make DESTDIR=$PKG install
}

